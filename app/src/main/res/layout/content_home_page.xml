<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="101dp"
    tools:layout_editor_absoluteY="337dp">


    <EditText
        android:id="@+id/searchCard"
        android:layout_width="244dp"
        android:layout_height="44dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Type artist name"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewArtists" />

    <ListView
        android:id="@+id/listViewArtists"
        android:layout_width="376dp"
        android:layout_height="165dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="16dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:listSelector="@color/colorAccent"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="756dp"
        android:layout_marginEnd="155dp"
        android:text="Backup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="816dp"
        android:layout_marginEnd="155dp"
        android:text="Restore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/addArtistButton"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:background="#1C1C1C"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/searchCard"
        app:layout_constraintTop_toBottomOf="@+id/listViewArtists"
        app:srcCompat="@drawable/plusle" />

    <ImageButton
        android:id="@+id/deleteArtistButton"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:background="#1C1C1C"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/searchCard"
        app:layout_constraintTop_toBottomOf="@+id/listViewArtists"
        app:srcCompat="@drawable/minun" />
</androidx.constraintlayout.widget.ConstraintLayout>